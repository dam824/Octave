<article class="w-full rounded-lg overflow-hidden shadow-sm bg-white flex flex-col md:flex-row h-auto md:h-[540px]">
  {% if post.thumbnail %}
    <div class="relative w-full md:w-1/2 h-[300px] md:h-full">
      <img src="{{ post.thumbnail.src('large') }}" alt="{{ post.thumbnail.alt }}"
           class="w-full h-full object-cover" />
      {% set main_cat = post.terms('category')|filter(c => c.parent == 0)|first %}
      {% if main_cat %}
        <span class="absolute top-4 left-4 bg-[#451DC7] text-white text-xs font-semibold px-4 py-1 rounded-full uppercase tracking-wide">
          {{ main_cat.name }}
        </span>
      {% endif %}
    </div>
  {% endif %}

  <div class="w-full md:w-1/2 bg-gradient-to-r from-[#451DC7] to-[#250F6B] text-white p-6 md:p-10 flex flex-col">
    {% set souscats = post.terms('category')|filter(c => c.parent != 0) %}
    {% if souscats %}
      <p class="text-[#04F06A] uppercase text-xs tracking-wider font-semibold mb-2">
        {{ souscats|map(t => t.name)|join(' Â· ') }}
      </p>
    {% endif %}

    <h2 class="text-white font-poppins font-normal text-[26px] md:text-[50px] leading-[30px] md:leading-[60px] tracking-[-0.05em] mb-6">
      {{ post.title }}
    </h2>

    <div class="mt-auto">
      <a href="{{ post.link }}" class="inline-block text-white text-[16px] leading-[20px] font-medium font-poppins relative group">
        Read more
        <span class="block h-[2px] bg-[#04F06A] mt-1"></span>
      </a>
    </div>
  </div>
</article>
