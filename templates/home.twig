{% extends "base.twig" %}

{% block content %}
<section class="min-h-screen flex flex-col gap-6 bg-[radial-gradient(120%_100%_at_110%_0%,_#04F06A,_#451DC7)] px-6 md:px-10 lg:px-20 pt-6 md:pt-12 pb-12">

  {% if header_post %}
    {% include 'partials/block-header.twig' %}
  {% endif %}

  <!-- Ligne 1 : 3 cards verticales (posts[1], [2], [3]) -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-[75px] mx-auto">
  {% for post in posts|slice(1, 3) %}
    {% include 'partials/card-vertical.twig' with { post: post } %}
  {% endfor %}
</div>




</section>
{% endblock %}
